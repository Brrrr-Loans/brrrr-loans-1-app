{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-tailwindcss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer"
        ]
      }
    ],
    "at-rule-no-deprecated": null,
    "rule-empty-line-before": null
  }
} 